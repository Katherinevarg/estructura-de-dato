#include <iostream>
using namespace std;
float area (float b, float h);

int main()
{
     float altura, base;
    cout<<"ingresar la base: ";
    do{
        cin>>base;
    }while (base<=0);
    cout<<"ingresar la altura: ";
    do{
        cin>>altura;
    }while(altura<=0);
    
    cout<<"el area es: "<<(base*altura)/2.0;
    
    return 0;
}
float area(float b, float h)
{
    float aux;
    aux=(b*h)/2;
    return aux;
}
